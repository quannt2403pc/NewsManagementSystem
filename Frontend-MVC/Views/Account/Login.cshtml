@model Frontend_MVC.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    // Tùy chọn: Sử dụng layout riêng cho trang login (không có navbar/footer)
    // Layout = "~/Views/Shared/_LayoutLogin.cshtml";

    // Hoặc nếu không muốn layout nào cả:
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

 <style>
        /* ================================================== */
        /* CSS TRANG ĐĂNG NHẬP (Thêm vào site.css) */
        /* ================================================== */
        html {
            height: 100%;
        }

        body {
            height: 100%;
            margin: 0;
            background: linear-gradient(to right, #e2e2e2, #c9d6ff);
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", "Noto Sans", "Liberation Sans", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        .login-card {
            width: 100%;
            max-width: 450px;
            border: none;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            padding: 2.5rem;
            background-color: #ffffff;
        }
            /* ... (phần còn lại của CSS của bạn) ... */
            .login-card h2 {
                text-align: center;
                font-weight: 600;
                margin-bottom: 2rem;
                color: #333;
            }

            .login-card .btn-primary {
                padding: 0.75rem;
                font-weight: 500;
                font-size: 1rem;
                border-radius: 8px;
                background-color: #0d6efd;
                border: none;
                transition: background-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            }

                .login-card .btn-primary:hover {
                    background-color: #0b5ed7;
                    box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
                }

        .form-floating > .form-control {
            border-radius: 8px;
        }

        .validation-summary-errors {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

            .validation-summary-errors ul {
                margin-bottom: 0;
                padding-left: 1.2rem;
            }

        .field-validation-error {
            color: #dc3545;
            font-size: 0.875em;
        }
 </style>
</head>
<body>

    <div class="login-container">
        <div class="login-card">

            <h2>@ViewData["Title"]</h2>

            <section>
                <form asp-action="Login" method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    @Html.AntiForgeryToken()

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        <label asp-for="Email" class="form-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        <label asp-for="Password" class="form-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Đăng nhập</button>
                    </div>
                </form>
            </section>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>