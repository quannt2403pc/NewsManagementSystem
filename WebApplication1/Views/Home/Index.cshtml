<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | FUNewsManagementSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
                cursor: pointer; /* Thêm con trỏ chuột để người dùng biết có thể click */
            }

        .card-title {
            font-weight: bold;
            color: #007bff;
        }

        .card-subtitle {
            font-size: 0.9em;
        }

        .login-btn-container {
            position: absolute;
            top: 1rem;
            right: 1rem;
        }
    </style>
</head>
<body>

    <header class="bg-primary text-white text-center py-4 position-relative">
        <div class="container">
            <h1 class="display-4">FUNewsManagementSystem</h1>
            <p class="lead">Latest news from your university</p>
        </div>
        <div class="login-btn-container">
            <button id="loginBtn" class="btn btn-light">Login</button>
        </div>
    </header>

    <main class="container my-5">
        <h2 class="text-center mb-4">Featured Articles</h2>
        <div id="news-list" class="row row-cols-1 row-cols-md-2 g-4">
            <div id="loading" class="text-center w-100">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <p>&copy; 2025 FUNewsManagementSystem. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const newsListContainer = document.getElementById('news-list');
            const loadingSpinner = document.getElementById('loading');
            const loginBtn = document.getElementById('loginBtn');

            const apiUrl = 'https://localhost:7134/api/NewsArticle/active';

            const createNewsCard = (article) => {
                const createdDate = new Date(article.createdDate).toLocaleDateString('vi-VN');
                return `
                            <div class="col">
                                <div class="card h-100 shadow-sm" onclick="window.location.href='ui/newsArticleDetail.html?id=${article.newsArticleId}'">
                                    <div class="card-body">
                                        <h5 class="card-title">${article.newsTitle}</h5>
                                        <p class="card-subtitle mb-2 text-muted">${article.headline}</p>
                                        <p class="card-text">${article.newsContent}</p>
                                    </div>
                                    <div class="card-footer bg-light border-0">
                                        <small class="text-muted">Đăng vào ngày: ${createdDate}</small>
                                    </div>
                                </div>
                            </div>
                        `;
            };

            const fetchNews = async () => {
                try {
                    loadingSpinner.style.display = 'block';
                    const response = await fetch(apiUrl);

                    if (!response.ok) {
                        const message = response.status === 404
                            ? 'Hiện chưa có tin tức nào được đăng.'
                            : `Lỗi ${response.status} - ${response.statusText}`;
                        newsListContainer.innerHTML = `<div class="col-12"><p class="alert alert-danger text-center">${message}</p></div>`;
                        return;
                    }

                    const newsData = await response.json();
                    const articles = Array.isArray(newsData) ? newsData : (newsData.$values || []);

                    newsListContainer.innerHTML = '';

                    if (articles.length > 0) {
                        articles.forEach(article => {
                            newsListContainer.innerHTML += createNewsCard(article);
                        });
                    } else {
                        newsListContainer.innerHTML = `<div class="col-12"><p class="alert alert-info text-center">Hiện chưa có tin tức nào được đăng.</p></div>`;
                    }
                } catch (error) {
                    console.error('Lỗi khi tải tin tức:', error);
                    newsListContainer.innerHTML = `<div class="col-12"><p class="alert alert-danger text-center">Có lỗi xảy ra khi tải dữ liệu. Vui lòng thử lại sau.</p></div>`;
                } finally {
                    loadingSpinner.style.display = 'none';
                }
            };

            fetchNews();

            loginBtn.addEventListener('click', () => {
                window.location.href = '/ui/login.html';
            });

        });
    </script>
</body>
</html>